<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.system.blog.post.mapper.PostMapper">

    <insert id="writeProcess">
        INSERT INTO `post`(`id`, `category_id`, `title`, `content`, `user_id`, `reg_date`)
        VALUES (
            #{id}
            ,#{categoryId}
            ,#{title}
            ,#{content}
            ,#{userId}
            ,now())
    </insert>


    <update id="updateProcess">
        UPDATE `post` SET
             `category_id`=#{categoryId}
            ,`title`=#{title}
            ,`content`=#{content}
        WHERE 1
          and id=#{id}
          and `user_id`=#{userId}
    </update>

    <delete id="deleteProcess">
        DELETE FROM `post`
        WHERE 1
          and id=#{id}
          and `user_id`=#{userId}
    </delete>

    <resultMap id="postMap" type="egovframework.rte.psl.dataaccess.util.EgovMap">
        <id column="id" property="id" jdbcType="VARCHAR"/>
        <result column="title" property="title" jdbcType="VARCHAR"/>
        <result column="content" property="content" jdbcType="VARCHAR"/>
        <association column="id" property="categoryId" select="getCategory"/>
    </resultMap>

    <select id="getPost" resultMap="postMap">
        /* getPost */
        SELECT `id`, `category_id`, `title`, `content`, `user_id`, `reg_date`
        FROM `post`
        WHERE 1
          and id = #{postId}
    </select>

    <select id="getCategory" resultType="egovframework.rte.psl.dataaccess.util.EgovMap">
        /* getCategory */
        SELECT `id`, `name`, `user_id`
        FROM `category`
        WHERE 1
          and id=#{categoryId}
    </select>

    <select id="getSearch" resultMap="postMap">
        /* getSearch */
        SELECT `id`, `category_id`, `title`, `content`, `user_id`, `reg_date`
        FROM `post`
        WHERE 1
    </select>
</mapper>